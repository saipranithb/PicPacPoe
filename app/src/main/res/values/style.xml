<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GameButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TicTacToeCell">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#222222</item>
    </style>
    <!-- Base text style -->
    <style name="TextAppearance.Game" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/pstp</item> <!-- Replace with your font -->
        <item name="android:textColor">#222222</item>
    </style>

    <!-- Apply to all TextViews -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textViewStyle">@style/TextAppearance.Game</item>
    </style>
</resources>